<Window x:Class="Nidhogg_Studio.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nidhogg_Studio"
        mc:Ignorable="d"
        Title="SplashWindow" Height="455" Width="600" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" Background="{DynamicResource StandardBackgroundBrush}" ShowInTaskbar="False" Loaded="Window_Loaded" BorderBrush="{DynamicResource SplashBorderBrush}" BorderThickness="1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="92" />
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <Image Width="80" Height="80" HorizontalAlignment="Left" Margin="10,0" />
        <TextBlock Text="Nidhogg Studio" Foreground="{DynamicResource Foreground}" FontWeight="DemiBold" FontSize="32" VerticalAlignment="Center" Margin="100,0" />
        <TextBlock Text="© 2015 Nidhogg Studio Levent Tasdemir" Grid.Row="2" VerticalAlignment="Center" Foreground="{DynamicResource TitelbarForegroundBrush}" Margin="40,0" />
    </Grid>
</Window>
