<ns:BaseWindow x:Class="Nidhogg_Studio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ns="clr-namespace:ns.GUI.WPF;assembly=ns.GUI.WPF"
        xmlns:nsc="clr-namespace:ns.GUI.WPF.Controls;assembly=ns.GUI.WPF"
        Title="Nidhogg Studio" Height="960" Width="1280" Style="{DynamicResource Window}" WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
            <RowDefinition Height="2" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <nsc:Menu Name="MainMenu" Grid.Row="0" />
        <ns:Editor Grid.Row="1" />
        <Border Grid.Row="2" BorderThickness="0" BorderBrush="Transparent" />
    </Grid>
</ns:BaseWindow>
