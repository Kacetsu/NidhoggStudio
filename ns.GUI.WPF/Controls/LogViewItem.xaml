<ListBoxItem x:Class="ns.GUI.WPF.Controls.LogViewItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Name="Main" d:DesignHeight="25" d:DesignWidth="300" BorderThickness="0,0,0,2" BorderBrush="Transparent" Focusable="False" IsEnabled="False">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="100*" />
        </Grid.ColumnDefinitions>
        <Label Focusable="False" Name="TimestampLabel" Foreground="{DynamicResource LogInfoForegroundBrush}" Content="[Timestamp]" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" Height="Auto" FontFamily="Consolas" FontSize="12" Margin="0" Padding="0,4" />
        <TextBlock Focusable="False" Name="MessageBlock" Foreground="{DynamicResource LogInfoForegroundBrush}" Text="[Message]"  Grid.Column="1" VerticalAlignment="Top" Height="Auto" HorizontalAlignment="Stretch" Margin="0" Padding="0,4" FontFamily="Consolas" FontSize="12" />
    </Grid>
</ListBoxItem>
